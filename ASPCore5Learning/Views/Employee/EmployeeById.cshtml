    ViewData["Title"] = "EmployeeDetais By Id";
}

<h4> Hello, Welcome to @Model.Name's Details  </h4>
<div class="col-8">
    <div class="card m-8">
        <div class="card" style="background-color:burlywood">
            <h4> @Model.Name</h4>
        </div>
        <img class="card-img-top" src="~/Images/employee.jpg" />
        <div class="card-footer text-center">
            <a asp-controller="Employee" asp-action="Employees" class="btn btn-primary">Back</a>
            <a href="#" class="btn btn-primary">Update</a>
            <a href="#" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>


